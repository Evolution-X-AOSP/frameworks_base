<?xml version="1.0" encoding="utf-8"?>
<com.google.android.systemui.assist.LockscreenOpaLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lockscreen_opa"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:paddingBottom="@dimen/opa_lockscreen_padding_bottom">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@id/red"
                style="@style/LockscreenDotStyle"
                android:layout_gravity="end"
                android:layout_marginEnd="-10.0dip"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_sysbar_opa_red" />

            <ImageView
                android:id="@id/blue"
                style="@style/LockscreenDotStyle"
                android:layout_gravity="end"
                android:layout_marginEnd="-10.0dip"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_sysbar_opa_blue" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@id/green"
                style="@style/LockscreenDotStyle"
                android:layout_gravity="start"
                android:layout_marginStart="-10.0dip"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_sysbar_opa_green" />

            <ImageView
                android:id="@id/yellow"
                style="@style/LockscreenDotStyle"
                android:layout_gravity="start"
                android:layout_marginStart="-10.0dip"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_sysbar_opa_yellow" />
        </FrameLayout>
    </LinearLayout>
</com.google.android.systemui.assist.LockscreenOpaLayout>
