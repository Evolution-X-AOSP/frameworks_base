<resources xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
    <!-- Tri-state UI -->
    <style name="qs_theme" parent="Theme.SystemUI.QuickSettings">
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Pure Tuner Theme-->
    <style name="ExTunerSettings" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="preferenceTheme">@style/TunerPreferenceTheme</item>
    </style>

    <style name="OnTheGoDialog" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:textColor">@color/notification_primary_text_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TextAppearance.Notifications.reTicker" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="Theme.DeviceDefault.SystemUI" parent="@*android:Theme.DeviceDefault.SystemUI">
        <item name="colorSurfaceHeader">?androidprv:attr/colorSurfaceHeader</item>
    </style>
</resources>
