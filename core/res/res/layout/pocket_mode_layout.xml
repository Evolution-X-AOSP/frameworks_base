<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pocket_mode_active_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pocket_mode_active"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" 
        android:layout_centerHorizontal="true"
        android:layout_above="@id/pocket_mode_phone_image" />

    <ImageView
        android:id="@+id/pocket_mode_phone_image"
        android:layout_width="153dp"
        android:layout_height="308dp"
        android:src="@drawable/prevent_mode_img"
        android:layout_centerInParent="true" 
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/pocket_mode_hint_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pocket_mode_hint"
        android:textColor="#888888"
        android:textSize="14sp" 
        android:layout_below="@id/pocket_mode_phone_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>


